<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payum.template.obtain_credit_card">%prepare_template%</parameter>
        <parameter key="payum.action.obtain_credit_card.class">Locastic\TcomPaywayPayumBundle\Service\ObtainCreditCardAction</parameter>
    </parameters>

   <services>
       <service id="payum.form.type.credit_card" class="Locastic\TcomPaywayPayumBundle\Form\Type\CreditCardType">
           <tag name="form.type" alias="payum_credit_card" />
       </service>

       <service class="Locastic\TcomPaywayPayumBundle\Service\Prepare" id="locastic_tcompaywaypayumbundle.service.prepare">
           <argument id="payum" type="service"/>
           <argument id="payum.security.token_factory" type="service"/>
       </service>
   </services>
</container>
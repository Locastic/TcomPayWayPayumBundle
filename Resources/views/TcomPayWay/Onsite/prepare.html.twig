<form id="payway-authorize-direct" name="payway-authorize-direct" method="post"
      action="{{ payment.apiEndPoint }}">
    <input type="hidden" name="pgw_shop_id" value="{{ payment.pgwShopId }}"/>
    <input type="hidden" name="pgw_order_id" value="{{ payment.pgwOrderId }}"/>
    <input type="hidden" name="pgw_amount" value="{{ payment.pgwAmount }}"/>
    <input type="hidden" name="pgw_installments" value="{{ payment.pgwInstallments }}"/>
    <input type="hidden" name="pgw_authorization_type" value="{{ payment.pgwAuthorizationType }}"/>
    <input type="hidden" name="pgw_authorization_token" value="{{ payment.pgwAuthorizationToken }}"/>
    <input type="hidden" name="pgw_language" value="{{ payment.pgwLanguage }}"/>
    <input type="hidden" name="pgw_return_method" value="{{ payment.pgwReturnMethod }}"/>
    <input type="hidden" name="pgw_success_url" value="{{ payment.pgwSuccessUrl }}"/>
    <input type="hidden" name="pgw_failure_url" value="{{ payment.pgwFailureUrl }}"/>
    <input type="hidden" name="pgw_card_number" value="{{ payment.pgwCardNumber }}"/>
    <input type="hidden" name="pgw_card_expiration_date" value="{{ payment.pgwCardExpirationDate }}"/>
    <input type="hidden" name="pgw_card_verification_data" value="{{ payment.pgwCardVerificationData }}"/>
    <input type="hidden" name="pgw_first_name" value="{{ payment.pgwFirstName }}"/>
    <input type="hidden" name="pgw_last_name" value="{{ payment.pgwLastName }}"/>
    <input type="hidden" name="pgw_street" value="{{ payment.pgwStreet }}"/>
    <input type="hidden" name="pgw_city" value="{{ payment.pgwCity }}"/>
    <input type="hidden" name="pgw_post_code" value="{{ payment.pgwPostCode }}"/>
    <input type="hidden" name="pgw_country" value="{{ payment.pgwCountry }}"/>
    <input type="hidden" name="pgw_telephone" value="{{ payment.pgwPhoneNumber }}"/>
    <input type="hidden" name="pgw_email" value="{{ payment.pgwEmail }}"/>
    <input type="hidden" name="pgw_merchant_data" value="{{ payment.pgwMerchantData }}"/>
    <input type="hidden" name="pgw_signature" value="{{ payment.pgwSignature }}"/>
</form>
<script> document.forms["payway-authorize-direct"].submit(); </script>
{% extends layout ?: "@PayumCore/layout.html.twig" %}

{% block payum_body %}
    <form method="POST">
        <div>
            {{ form_errors(form.holder) }}
            {{ form_label(form.holder) }}
            {{ form_widget(form.holder) }}
        </div>
        <div>
            {{ form_errors(form.holderSurname) }}
            {{ form_label(form.holderSurname) }}
            {{ form_widget(form.holderSurname) }}
        </div>
        <div>
            {{ form_errors(form.number) }}
            {{ form_label(form.number) }}
            {{ form_widget(form.number) }}
        </div>
        <div>
            {{ form_errors(form.securityCode) }}
            {{ form_label(form.securityCode) }}
            {{ form_widget(form.securityCode) }}
        </div>
        <div>
            {{ form_errors(form.expireAt) }}
            {{ form_label(form.expireAt) }}
            {{ form_widget(form.expireAt) }}
        </div>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <input type="submit" value="Pay"/>
    </form>
{% endblock %}

